{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "IOS.Scheduler": "Debug",
      "Quartz": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Mqtt": {
    "Broker": "localhost",
    "Port": 1883,
    "ClientId": "IOS.Scheduler",
    "Username": "",
    "Password": "",
    "KeepAlivePeriod": 60,
    "CleanSession": true,
    "ReconnectDelay": 5000,
    "Topics": {
      "Subscribe": [
        "sensor/grating",
        "motion/moving/complete",
        "motion/status",
        "vision/detection",
        "coder/result",
        "coder/complete"
      ],
      "Publish":{
        "Vison":"vision/height",
        "Motion":"motion/start",
        "Coder":"coder/start"
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "IOS.Scheduler": "Debug",
        "Quartz": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ios-scheduler-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
} 